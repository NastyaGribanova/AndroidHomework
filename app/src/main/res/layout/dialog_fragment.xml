<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".bottomNavigation.CompanionFragment">

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="414dp"
        android:layout_height="259dp"
        android:background="@drawable/imgfooon"
        android:gravity="top|center"
        android:text="Add new companion!"
        android:textColor="#F7F2F2"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />

    <EditText
        android:id="@+id/et_name_dialog"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Name:"
        android:textColor="#F7F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dialog" />

    <EditText
        android:id="@+id/et_description_dialog"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Description:"
        android:textColor="#F7F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name_dialog" />

    <EditText
        android:id="@+id/et_index_dialog"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Index:"
        android:inputType="number"
        android:textColor="#F7F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/et_description_dialog" />

    <Button
        android:id="@+id/btn_cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#05152c"
        android:text="Cancel"
        android:textColor="#F7F2F2"
        app:layout_constraintStart_toStartOf="@id/et_index_dialog"
        app:layout_constraintTop_toBottomOf="@id/et_index_dialog" />

    <Button
        android:id="@+id/btn_add_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#05152c"
        android:text="Add"
        android:textColor="#F7F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@id/btn_cancel_dialog"
        app:layout_constraintTop_toBottomOf="@id/et_index_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>
